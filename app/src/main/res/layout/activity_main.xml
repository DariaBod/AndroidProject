<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:hapticFeedbackEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DEF4FF"
        tools:context=".activity.MainActivity" android:layout_centerHorizontal="false">

    <ImageView android:id="@+id/movie_1"
               app:layout_widthPercent="100%"
               app:layout_heightPercent="57%"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:background="@drawable/movie_1"
               app:layout_marginTopPercent="5%"
               android:layout_centerHorizontal="false"
               app:layout_marginLeftPercent="0%"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content" android:layout_marginLeft="40dp" android:layout_marginTop="99dp">
    </ImageView>
    <Button android:id="@+id/camera"
            app:layout_widthPercent="30.09%"
            app:layout_heightPercent="15.846%"
            android:layout_alignParentLeft="true"
            app:layout_marginLeftPercent="9.6%"
            android:layout_alignParentTop="true"
            app:layout_marginTopPercent="71%"
            android:onClick="shoot"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/open_camera">
    </Button>
    <Button android:id="@+id/gallery"
            app:layout_widthPercent="30.09%"
            app:layout_heightPercent="15.846%"
            android:layout_alignParentLeft="true"
            app:layout_marginLeftPercent="59.6%"
            android:layout_alignParentTop="true"
            app:layout_marginTopPercent="71%"
            android:onClick="gallery"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/open_gallery"></Button>

</androidx.percentlayout.widget.PercentRelativeLayout>