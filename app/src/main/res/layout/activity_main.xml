<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DEF4FF"
        tools:context=".MainActivity" android:layout_centerHorizontal="false">

    <ImageView android:id="@+id/movie_1"
               android:layout_width="333dp"
               android:layout_height="321dp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:background="@drawable/movie_1"
               tools:layout_editor_absoluteY="103dp"
               tools:layout_editor_absoluteX="39dp"
               android:layout_marginTop="99dp"
               android:layout_centerHorizontal="false" android:layout_marginLeft="32dp">
    </ImageView>
    <Button android:id="@+id/camera"
            android:layout_width="124dp"
            android:layout_height="116dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="520dp"
            android:onClick="shoot"
            android:background="@drawable/open_camera">
    </Button>
    <Button android:id="@+id/gallery"
            android:layout_width="124dp"
            android:layout_height="127dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="237dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="520dp"
            android:onClick="gallery"
            android:background="@drawable/open_gallery"></Button>

</RelativeLayout>