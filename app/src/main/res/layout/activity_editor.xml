<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DEF4FF"
        tools:context=".Editor">
        <!--android:background="#DEF4FF"-->
    <ImageView android:id="@+id/frame"
               android:layout_width="match_parent"
               android:layout_height="534dp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="0dp"
               android:background="@drawable/frame" android:layout_marginLeft="0dp"></ImageView>
    <ImageView
            android:id="@+id/photo"
            android:layout_width="353dp"
            android:layout_height="454dp"
            android:layout_marginTop="42dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"></ImageView>
    <Button
            android:layout_width="71dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="537dp"
            android:layout_height="45dp"
            android:onClick="leftRotate"
            android:background="@drawable/left_rotation"
            android:id="@+id/left" android:layout_marginLeft="1dp"/>
    <Button
            android:layout_width="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="537dp"
            android:layout_height="60dp"
            android:onClick="rollback"
            android:background="@drawable/trash"
            android:id="@+id/trash"
            android:layout_marginLeft="100dp"/>
    <Button
            android:layout_width="71dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="537dp"
            android:layout_height="45dp"
            android:background="@drawable/right_rotation"
            android:onClick="rightRotate"
            android:id="@+id/right"
            android:layout_marginLeft="335dp"/>
    <Button
            android:layout_width="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="542dp"
            android:layout_height="55dp"
            android:background="@drawable/save"
            android:onClick="save"
            android:id="@+id/save"
            android:layout_marginLeft="250dp"/>
    <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
                                         android:layout_height="wrap_content"
                                         android:layout_alignParentLeft="true"
                                         android:layout_alignParentTop="true" android:layout_marginLeft="0dp"
                                         android:layout_marginTop="612dp">
    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>